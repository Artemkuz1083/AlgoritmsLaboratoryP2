<Window x:Class="LaboratoryP2.Fractal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryP2"
        mc:Ignorable="d"
        Title="Fractal" Height="450" Width="800">
    <Grid Background="#FFEEE7FF">
        <Border BorderBrush="Black" BorderThickness="2" Margin="10,30,10,78">
            <Canvas x:Name="canvas" Background="#FFF4F4F4"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="35,0,295,21" Height="36" VerticalAlignment="Bottom">
            <TextBox x:Name="deep"
                     Text="Введите глубину фрактала"
                     BorderBrush="Black"
                     Background="#FFF4F4F4"
                     HorizontalContentAlignment="Center"
                     GotFocus="TextBox_GotFocus" 
                     LostFocus="TextBox_LostFocus"
                     />
        </Border>
        <Button x:Name="btnStart" Content="Запуск" Margin="0,0,56,23" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="157" Click="BtnStart_Click" />

    </Grid>
</Window>
